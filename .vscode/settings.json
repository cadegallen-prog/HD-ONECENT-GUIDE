{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },

  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "typescript.tsserver.maxTsServerMemory": 4096,

  "files.eol": "\n",

  "workbench.startupEditor": "readme",
  "workbench.editor.enablePreview": false,
  "css.lint.unknownAtRules": "ignore",

  "files.associations": {
    "**/reports/playwright/html/index.html": "plaintext"
  },
  "files.watcherExclude": {
    "**/reports/playwright/html/**": true,
    "**/.next/**": true,
    "**/node_modules/**": true
  },
  "search.exclude": {
    "**/reports/playwright/html/**": true,
    "**/.next/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/out/**": true,
    "**/coverage/**": true
  },

  "terminal.integrated.focusOnRun": false,

  "security.workspace.trust.enabled": true,

  "webhint.enable": false,

  // Supabase Extension Settings
  // Connect to remote project (not local)
  "supabase.projectRef": "djtejotbcnzzjfsogzlc"
}
