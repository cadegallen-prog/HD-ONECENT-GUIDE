{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },

  "python.defaultInterpreterPath": ".venv\\Scripts\\python.exe",
  "python.terminal.activateEnvironment": true,

  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    }
  },
  "python.analysis.typeCheckingMode": "strict",

  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "typescript.tsserver.maxTsServerMemory": 4096,

  "files.eol": "\n",

  "workbench.startupEditor": "welcomePage",
  "workbench.editor.enablePreview": false,
  "css.lint.unknownAtRules": "ignore",

  "files.associations": {
    "**/reports/playwright/html/index.html": "plaintext"
  },
  "files.watcherExclude": {
    "**/reports/playwright/html/**": true,
    "**/.next/**": true,
    "**/node_modules/**": true
  },
  "search.exclude": {
    "**/reports/playwright/html/**": true,
    "**/.next/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/out/**": true,
    "**/coverage/**": true
  },

  "terminal.integrated.focusOnRun": false,

  "security.workspace.trust.enabled": true,

  "webhint.enable": false,

  // Supabase Extension Settings
  // Connect to remote project (not local)
  "supabase.projectRef": "djtejotbcnzzjfsogzlc",
  "github.copilot.chat.copilotMemory.enabled": true,
  "github.copilot.chat.anthropic.contextEditing.enabled": true,
  "github.copilot.chat.anthropic.thinking.budgetTokens": 32000,
  "chat.customAgentInSubagent.enabled": true,
  "github.copilot.chat.searchSubagent.enabled": true,
  "chat.agent.thinking.collapsedTools": "off"
}
