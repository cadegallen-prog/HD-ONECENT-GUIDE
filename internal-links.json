  "linkingBestPractices": {
    "contextualLinks": {
      "description": "Links should appear naturally within content, not as standalone 'click here' text",
      "examples": [
        {
          "bad": "To learn more, <a href='clearance-lifecycle.html'>click here</a>.",
          "good": "Learn how items reach penny status in the <a href='clearance-lifecycle.html'>Clearance Lifecycle</a> guide."
        }
      ]
    },
    "relatedTopics": {
      "description": "Every page should have a 'Related Topics' section at the end linking to 2-4 related pages",
      "template": "<div class='related-topics-section'><h3 class='icon-link'>Related Topics</h3><ul><li><a href='page.html'>Title</a> â€” Description</li></ul></div>"
    },
    "nextSteps": {
      "description": "Guide users to the next logical page in their learning journey",
      "template": "<p><strong>Next:</strong> <a href='next-page.html'>Next Topic Title</a></p>"
    },
    "crossReferences": {
      "description": "Link to other pages when mentioning related concepts",
      "examples": [
        "When scouting with the <a href='digital-prehunt.html'>app</a>...",
        "Understanding <a href='clearance-lifecycle.html'>price endings</a> is essential..."
      ]
    }
  },

  "seoConsiderations": {
    "internalLinking": [
      "Each page should have 3-10 internal links to other pages",
      "Use descriptive anchor text (not 'click here')",
      "Link to both higher and lower hierarchy pages",
      "Ensure important pages receive more internal links",
      "Avoid linking to the same page multiple times from one page (unless in different contexts)"
    ],
    "linkHierarchy": {
      "tier1": ["index.html", "what-are-pennies.html", "clearance-lifecycle.html"],
      "tier2": ["digital-prehunt.html", "in-store-strategy.html", "checkout-strategy.html", "faq.html"],
      "tier3": ["internal-systems.html", "facts-vs-myths.html", "responsible-hunting.html", "resources.html"],
      "tier4": ["All other pages"]
    }
  },

  "orphanPages": {
    "description": "Pages with no incoming links (should be avoided)",
    "current": [],
    "note": "All pages should be accessible from navigation AND have contextual links from related pages"
  }
}
