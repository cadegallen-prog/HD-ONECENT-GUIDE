{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "redirects": [
    {
      "source": "/ads.txt",
      "has": [
        {
          "type": "host",
          "value": "pennycentral.com"
        },
        {
          "type": "header",
          "key": "x-forwarded-proto",
          "value": "http"
        }
      ],
      "destination": "https://www.pennycentral.com/ads.txt",
      "permanent": true
    },
    {
      "source": "/ads.txt",
      "has": [
        {
          "type": "host",
          "value": "pennycentral.com"
        }
      ],
      "destination": "https://www.pennycentral.com/ads.txt",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/ads.txt",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/trickle-finds",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/send-weekly-digest",
      "schedule": "0 8 * * 0"
    },
    {
      "path": "/api/cron/seed-penny-list",
      "schedule": "0 8 * * *"
    }
  ]
}
